@model FurkanCelik.Models.DersSecimi

@{
    ViewData["Title"] = "Edit";
}

<h1>Ders Seçim Ekranı</h1>

<h4>Ders Güncelle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DersAdi" class="control-label"></label>
                <input asp-for="DersAdi" class="form-control" />
                <span asp-validation-for="DersAdi" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OgrenciSecmisMi" /> @Html.DisplayNameFor(model => model.OgrenciSecmisMi)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OgretmenOnayi" disabled /> @Html.DisplayNameFor(model => model.OgretmenOnayi)
                    @Html.HiddenFor(x => x.OgretmenOnayi)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

